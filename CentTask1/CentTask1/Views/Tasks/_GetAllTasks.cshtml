<h1 class="mt-5">Lists of Tasks</h1>


@* modal *@
<div  >
                            @* the is same as the form *@
    <div class="modal fade createOrEditModal" >

        <div class="modal-dialog modal-div">
            <div class="modal-content modal-div2">
            <div class="modal-header">
                    <h4 class="modal-title text-info" id="modalTitle">Task</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <div class="modal-body" id="modalBodyContent">
              
 
            </div>
        </div>  

    </div>

</div>
</div>
<p class="button">
    <!-- Create -->
    <a href="#" class="btn btn-primary openTaskModal" data-url="Tasks/CreateProjectTask" data-id="">Create Task</a>
</p>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover table-bordered align-middle" id="myTable">
            <thead class="bg-info text-light">

        <tr>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.TaskName)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.Description)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.Priority)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.EquipmentType)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.TWR)</th>
                    <th style=" text-align : center;">@Html.DisplayNameFor(model => model.ProjectName)</th>
                    <th style=" text-align : center;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @* Data rows are loaded via JS *@
    </tbody>
</table>

    </div>
</div>



