@model CentTask1.ViewModels.HomeViewModel.DashboardViewModel

<!-- Bootstrap + Font Awesome should already be included in layout -->
<style>
  

    *, ::after, ::before { box-sizing: border-box; }
     
    .stats-cards-flex {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        width: 98%;
        margin: 0 auto;
    }
    /* Keep 8 cards layout (equal-width) */
    .stats-cards-flex > .progress-card {
        flex: 1 1 calc(100% / 8 - 10px);
        min-width: 100px;
    }

    /* Card styling (copied colors / look from sample) */
    .packages-data .progress-card .card {
        box-shadow: 6px 6px 30px 4px #0000000D;
        border-radius: 10px;
        border: none;
        min-height: 120px;
        display: flex;
        align-items: center;
    }
    .card.totalCount      { background: #C9DBF3; }
    .card.toBeOrdered     { background: #DFDCDC; }
    .card.ordered         { background: #F4EEA7; }
    .card.received        { background: #F4D29A; }
    .card.staged          { background: #D1EDAF; }
    .card.issued          { background: #beb5f7; cursor: pointer; }
    .card.percentStaged   { background: #F4EEA7; }
    /* extra card uses same palette so overall look remains consistent */
    .card.extra           { background: #DFDCDC; }

    .card-body { padding: 1.25rem; font-size: 14px; }

    .packages-data .progress-card .card .card-title,
    .packages-data .progress-card .card .card-text {
        color: #2C2B2B;
        font-weight: 600;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .stats-cards-flex > .progress-card { flex: 1 1 45%; }
    }
</style>
<div class="body">
    <div class="text-center my-4">
        <img style="height: 100px;" src="~/assets/img/logo.png" alt="Logo" />
    </div>
<div class="packages-data">
    <div class="stats-cards-flex mt-4">

        <!-- 1 -->
        <div class="progress-card">
            <div class="card totalCount">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Total Tasks</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.TaskCount)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 2 -->
        <div class="progress-card">
            <div class="card toBeOrdered">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Pending Tasks</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.PendingTasks)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 3 -->
        <div class="progress-card">
            <div class="card ordered">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Completed Tasks</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.CompletedTasks)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 4 -->
        <div class="progress-card">
            <div class="card received">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Active Tasks</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.TasksInProgress)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 5 -->
        <div class="progress-card">
            <div class="card staged">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Total Projects</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.ProjectCount)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 6 -->
        <div class="progress-card">
            <div class="card issued">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Completed Projects</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.CompletedProjects)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 7 -->
        <div class="progress-card">
            <div class="card percentStaged">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Projects In Progress</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.ProjectsInProgress)
                    </h4>
                </div>
            </div>
        </div>

        <!-- 8 -->
        <div class="progress-card">
            <div class="card extra">
                <div class="card-body px-4 d-flex flex-column justify-content-center text-center">
                    <h6 class="card-title mb-2">Pending Projects</h6>
                    <h4 class="card-text mb-0" style="color:black; font-weight:600;">
                        @Html.DisplayFor(m => m.PendingProjects)
                    </h4>
                </div>
            </div>
        </div>

    </div>
</div>

</div>