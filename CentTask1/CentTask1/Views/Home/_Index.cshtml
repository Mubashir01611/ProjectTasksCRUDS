@model CentTask1.ViewModels.HomeViewModel.DashboardViewModel;

<!-- Bootstrap + Font Awesome should already be included in layout -->
<style>
    /* .body {
        background-color: #f8f9fa;
    } */

    .dashboard-container {
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
    }

    .stat-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        background: #fff;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 18px #ff6600;
        }

    .stat-icon {
        font-size: 2.5rem;
        color: #6c757d;
    }

    .stat-number {
        font-size: 2.2rem;
        font-weight: bold;
        margin-top: 5px;
        color: #212529;
    }

    .stat-title {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 0;
    }


    @@media (max-width: 768px) {
        .stat-card

    {
        margin-bottom: 20px;
    }

    }
</style>
<div class="body">

<div class="text-center my-4">
    <img style="height: 100px;" src="~/assets/img/logo.png" alt="Logo" />
</div>

<section class="dashboard-container">
    <div class="row g-4">
        <div class="col-md-6">
                <div class="row">

                    <!-- Total Tasks -->
                    <div class="col-md-3 col-sm-6">
                        <div class="card stat-card h-100 p-4 d-flex  justify-content-between flex-row align-items-center justify-content-center">
                            <div>
                                <p class="stat-title pb-1 ">Total Tasks</p>
                                <div class="stat-number ">@Html.DisplayFor(model => model.TaskCount)</div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center">

                            <div>
                                <p class="stat-title">Completed Tasks</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.CompletedTasks)</div>
                            </div>
                        </div>
                    </div>

                    <!-- Active Tasks -->
                    <div class="col-md-3 col-sm-6">
                        <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center">
                            <div>
                                <p class="stat-title">Active Projects</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.TasksInProgress)</div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center justify-content-center">

                            <div>
                                <p class="stat-title">Pending Projects</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.PendingTasks)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
                    <!-- Active Tasks -->
 
        <div class="col-md-6">
            <div class="row">

                    <!-- Total Tasks --> 
        <div class="col-md-3 col-sm-6">
                <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center">
                    <div>
                                <p class="stat-title">Total Projects</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.ProjectCount)</div>
                </div>
                
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
                <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center">
                   
                <div>
                                <p class="stat-title">Completed Projects</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.CompletedProjects)</div>
                </div>
            </div>
        </div>

                    <!-- Active Tasks -->
        <div class="col-md-3 col-sm-6">
                <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center">
                    <div>
                                <p class="stat-title">Active Projects</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.ProjectsInProgress)</div>
                </div>
              
            </div>
        </div> 
        <div class="col-md-3 col-sm-6">
                <div class="card stat-card p-4 d-flex  justify-content-between flex-row align-items-center justify-content-center">
                   
                <div>
                                <p class="stat-title">Pending Projects</p>
                                <div class="stat-number">@Html.DisplayFor(model => model.PendingProjects)</div>
                </div>
            </div>
        </div> 
            </div>
        </div>
    </div> 
      
     
</section>
</div>
