<!-- Modal -->
<div >
    <div id="taskItemModal" class="modal fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-custom" role="document">
            <div class="modal-content">
        <div class="modal-header">
         <h4 class="modal-title text-info" id="taskItemModalTitle"></h4>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

        </div>
        <div class="modal-body">
            <div style="margin-bottom: 10px;">  
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label for="taskName">Task Name *</label>
                    <input type="text" id="taskName" placeholder="Task Name" required />
                    <div class="error" id="taskNameError"></div>
                </div>
                <div class="form-group">
                    <label for="description">Description *</label>
                    <input type="text" id="description" placeholder="Description" required />
                    <div class="error" id="descError"></div>
                </div>
                <div class="form-group">
                    <label for="startDate">Start Date *</label>
                    <input type="date" id="startDate" required />
                    <div class="error" id="startDateError"></div>
                </div>
                <div class="form-group">
                    <label for="endDate">End Date *</label>
                    <input type="date" id="endDate" required />
                    <div class="error" id="endDateError"></div>
                </div>
                <div class="form-group">
                    <label for="status">Status *</label>
                    <select id="status" required>
                        <option value="">Please select</option>
                        <option value="NotStarted">Not Started</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Blocked">Blocked</option>
                        <option value="InReview">In Review</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <div class="error" id="statusError"></div>
                </div>
                <button class="add-btn addItem" id="addBtn" onclick="addOrUpdateEntry()">+</button>
            </div>
            <table class="task-table" id="taskTable">
                <thead>
                    <tr>
                        <th>Task Name</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody"></tbody>
            </table>
           
        </div>
     
        <div class="modal-footer">
            <button class="submit-btn" id="submitBtn" onclick="submitEntries()">Submit</button>
        </div>
    </div>
