<!-- Modal -->
<div >
    <div id="taskItemModal" class="modal   fade" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-custom" role="document">
            <div class="modal-content">
        <div class="modal-header modal-header1">
         <h4 class="modal-title text-info" id="taskItemModalTitle"></h4>
         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

        </div>
        <div class="modal-body modal-body1">

            <div class="col-md-12 mb-2">  

            <div class="form-row">

                <div class="form-group row">
                <span class="labour-head-count-td col-md-2">

                    <label class="form-label float-start fw-600" for="taskName">Task Name *</label>
                    <input class="form-control " type="text" id="taskName" placeholder="Task Name" required />
                    @* <div class="error" id="taskNameError"></div> *@ 
                    </span>   
                <span class="labour-head-count-td col-md-2">
                                    <label class="form-label float-start fw-600" for="description">Description *</label>
                    <input class="form-control " type="text" id="description" placeholder="Description" required />
                    @* <div class="error" id="descError"></div> *@
                </span>
                <span class="labour-head-count-td col-md-2">
                                    <label class="form-label float-start fw-600" for="startDate">Start Date *</label>
                    <input class="form-control "type="date" id="startDate" required />
                    @* <div class="error" id="startDateError"></div> *@
                </span>
                <span class="labour-head-count-td col-md-2">
                                    <label class="form-label float-start fw-600" for="endDate">End Date *</label>
                      <input class="form-control " type="date" id="endDate" required />
                    @* <div class="error" id="endDateError"></div> *@
                </span>
                <span class="labour-head-count-td col-md-2">
                                    <label class="form-label float-start fw-600" for="status">Status *</label>
                                    <select class="form-control " id="status" required>
                        <option value="">Please select</option>
                     <option value="NotStarted">Not Started</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Blocked">Blocked</option>
                        <option value="InReview">In Review</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    @* <div class="error" id="statusError"></div> *@
                </span>
                <span class="text-center col-md-1">
                                    <label class="form-label fw-600 w-100" >Add</label>
                     <button type="button" class="addItem btn-circle btn-sm" style="height: calc(1.5715em + 0.875rem + 2px);"><i class="fas fa-plus"></i></button>
                </span>
                </div>
            </div>

            </div>
            <table class="task-table" id="taskTable">
                <thead>
                    <tr>
                        <th>Task Name</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tableBody"></tbody>
            </table>
           
        </div>
     
        <div class="modal-footer1">
                    <div class="cancel">
                        <div class="col-sm-4 text-left">
                            <button class="btn btn-danger" data-bs-dismiss="modal" data-dismiss="modal" type="button" aria-label="editMtoModal">Close</button>
                        </div>
                    </div>
                    <div class="save">
                        <div class="col-sm-4 text-right">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                     
                </div>
    </div>
        </div>

    </div>
</div>
