<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> CentTask1</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/CentTask1.styles.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
        }
        .dashboard-containe {
            position:absolute;
            right:0;
            min-height: 100%;
            width: 99%;
            display: flex;
            flex-direction: row;
        }
        .sidebar {
            width: 250px;
            background: #f8f9fa;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            padding: 1rem 0;
        }

        .sidebar-link:hover{
            cursor:pointer;
        }
        .sidebar-content {
            flex: 1;
            padding: 13px;
        }
        .sidebar img {
            margin: 19px 0px 25px 24px;
            max-width: 169px;
            height: auto;
            
        }
        .sidebar .nav-link {
            text-align:start;
            margin-left: 41px;
            margin-top: 6px;
            margin-bottom: 0px;
            color: black;
        }
        .sidebar .nav-link:hover {
           cursor:pointer;
                color: #f65e0c;
        }
        .sidebar .separator {
            border-top: 1px solid #dee2e6;
        }
        .sidebar-bottom {
            text-align: center;
        }
        .main-content {
            width: 1254px;
            margin-left:250px;
            padding:4px;  
        }
        footer .container {
            text-align:center;
            width:0%;
        }
      


    </style>
</head>
<body>
    <div class="dashboard-containe">

            <nav class="sidebar">

                <div class="sidebar-content">

                    @* <a asp-action="MainIndex"> *@
                    <a asp-action="Index">
                        <img src="~/assets/img/logo.png" alt="Logo" />
                    </a>

                    <a href="#" class="nav-link fw-bold w-75 mx-auto" id="loadHome">

                        <i class="fa fa-home text-muted"></i> Home
                    
                    </a>
                    <div class="separator"></div>
               
                    <a class="nav-link w-75 mx-auto sidebar-link"> <i class="fa fa-tasks me-2 text-muted"></i>Tasks</a>
                
                    <a class="nav-link w-75 mx-auto " id="getProjects"><i class="fa fa-folder-open me-2 text-muted"></i>Projects</a>
                </div>
                    <div class="separator"></div>
                <div class="sidebar-bottom">
                    <a class="nav-link w-75" asp-area="" asp-controller="Settings" asp-action="Index"><i class="fa fa-cog"></i> Settings</a>
                </div>
            </nav>
       
        
        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
            <footer class="footer text-muted">
                <div class="container">
                    &copy; 2025 - CentTask1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
    </div>
  
    <!-- jQuery (pehle) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- ✅ SweetAlert2 ADD KAREIN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Tasks.js" asp-append-version="true"></script>
    <script src="~/js/project.js" asp-append-version="true"></script>

    <!-- DataTables (last) -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
