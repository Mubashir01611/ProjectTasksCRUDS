@model IEnumerable<CentTask1.ViewModels.ProjectViewModels.ProjectGetViewModel>
@{
    Layout = null;
}

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<!-- DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.css" />
<link href="~/css/site.css" rel="stylesheet" />
<style>
    div.dataTables_wrapper div.top {
        text-align: start;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap; /* optional: agar small screen ho to neeche aa jaye */
    }

    div.dataTables_wrapper div.top-left,
    div.dataTables_wrapper div.top-right {
        display: flex;
        align-items: center;
    }

    table {
        /* background: #2984ff; */
        border-collapse: separate;
        border-spacing: 0;
    }

        table.dataTable thead {
            background: #2984ff;
            border-top-left-radius: 12px;
        }

            table.dataTable thead th:first-child {
                background: #2984ff;
                border-radius: 6px 0 0 6px;
            }

            table.dataTable thead th:last-child {
                background: #2984ff;
                border-radius: 0 6px 6px 0;
            }

        table.dataTable tbody td:first-child {
            border-radius: 6px 0 0 6px;
        }

        table.dataTable tbody td:last-child {
            border-radius: 0 6px 6px 0;
        }
</style>

@* Modal (larger) *@
<div>
    <div class="modal fade" id="createOrEditProject" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-custom" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-info" id="projectModalTitle"></h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="projectModalBodyContent"></div>
            </div>
        </div>
    </div>
</div>

<h1 class="text-align-center">List of Projects</h1>
<p class="button text-end">
    <a href="#" class="btn btn-green openProjectModal projectButton">Add Project</a>
</p>

<!-- Wrap table in a position-relative container so spinner overlays the table body -->
<div id="projectTableWrapper" class="position-relative">
    <table class="table table-striped table-borderless align-content-start text-start" id="myProjectTable">
        <thead class="table-background text-light">
            <tr>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.ProjectName)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.Description)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.StartDate)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.EndDate)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.Budget)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.ClientName)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.Manager)</th>
                <th style=" text-align : start;">@Html.DisplayNameFor(model => model.Status)</th>
                <th style=" text-align : start;">Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <div id="Spinner" class="text-center my-4" style="display:none;">
        <div class="spinner-border text-info" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>
